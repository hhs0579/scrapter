rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users 컬렉션 규칙
    match /users/{userId} {
      // ⚠️ 보안 주의: 닉네임 중복 확인을 위해 모든 사용자가 읽을 수 있음 (회원가입 시 필요)
      // 프로덕션 환경에서는 Cloud Function을 통해 닉네임 중복 확인을 처리하거나,
      // 닉네임만 별도 컬렉션으로 분리하는 것을 권장합니다.
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Manuscripts 컬렉션 규칙 (원고 저장용)
    match /manuscripts/{manuscriptId} {
      // 로그인한 사용자는 자신의 원고를 읽고 쓸 수 있음
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
    }

    // Config 컬렉션 규칙 (설정 값 저장용 - API 키 등)
    match /config/{configId} {
      // ⚠️ 보안 주의: API 키가 포함될 수 있으므로 읽기 권한을 제한하는 것을 권장합니다.
      // 현재는 로그인 없이도 원고 생성이 가능하도록 읽기 허용
      // 프로덕션 환경에서는 Cloud Function을 통해 API 키를 제공하는 것을 권장합니다.
      allow read: if true;
      // 쓰기는 관리자만 가능 (보안상 Firestore 콘솔에서 직접 설정)
      allow write: if false; // 보안상 Firestore 콘솔에서 직접 설정
    }

    // Insights 컬렉션 규칙 (인사이트 글 저장용)
    match /insights/{insightId} {
      // 모든 사용자가 인사이트를 읽을 수 있음
      allow read: if true;
      // 쓰기는 인증된 사용자 중 nickname이 "admin"인 사용자만 가능
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.nickname == "admin";
    }

    // BusinessFinder 컬렉션 규칙 (비즈니스 파인더 글 저장용)
    match /businessFinder/{projectId} {
      // 모든 사용자가 비즈니스 파인더를 읽을 수 있음
      allow read: if true;
      // 쓰기는 인증된 사용자 중 nickname이 "admin"인 사용자만 가능
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.nickname == "admin";
    }
  }
}


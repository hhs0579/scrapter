rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Insights 이미지 저장 경로
    match /insights/{allPaths=**} {
      // 인증된 사용자는 읽기 가능
      allow read: if true;
      // 인증된 사용자는 쓰기 가능 (어드민)
      allow write: if request.auth != null;
    }
    
    // 기본 규칙: 모든 경로에 대한 접근 제한
    match /{allPaths=**} {
      // 인증된 사용자는 읽기 가능
      allow read: if request.auth != null;
      // 인증된 사용자는 쓰기 가능
      allow write: if request.auth != null;
    }
  }
}

